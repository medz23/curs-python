#if,else,elif
if 3 < 5:
    print("sunt pe ramura if")
else:
    print("sunt pe ramura else")

print("sfarsit")

if 3 > 5:
    print("sunt pe ramura if")
else:
    print("sunt pe ramura else")

print("sfarsit")

#Structuri repetitive
#lista de valori
my_list = [1, 5, 7, 8, 2, 3]

#while
numar = 5
while numar:
    print(numar)
    numar = 0

index = 0
while index < len(my_list):
    print(f'Elementul {my_list[index]} se afla pe pozitia {index}')
    index += 1

#for
for element in my_list:
    print(element)

for index, element in enumerate(my_list):
    print(f'Elementul {element} se afla pe pozitia {index}')

#functii
#fara parametrii
def my_function():
    return(3+5)

print(my_function())

#cu 1 parametru
def my_function_2(a):
    return(3+a)

print(my_function_2(5))

#cu 2 parametrii
def my_function_3(a, b):
    return(b+a)

print(my_function_3(5, 3))

#parametrii speciali
def my_function_4(*args):
    print(args, type(args))

print(my_function_4(5, 3, 25, "abcc"))

#input
my_number = input("nr = ")
print(2 + int(my_number))

#try..except
number = input('nr = ')

try:
    my_number = int(number)
except ValueError as e:
    my_number = 0

print(2 + int(my_number))
